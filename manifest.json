{
  "manifest_version": 3,
  "name": "下载URL为HTML文件",
  "version": "0.2",
  "description": "将当前页面URL保存为HTML文件，打开时会重定向到原URL",
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "下载URL为HTML文件"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}